<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<BorderPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="editor.EditorController">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <Menu text="File">
                <MenuItem text="Save" onAction="#onSave"/>
                <MenuItem text="Save As..." onAction="#onSaveAs"/>
                <MenuItem text="Load" onAction="#onLoad"/>
                <MenuItem text="Close" onAction="#onClose"/>
            </Menu>
            <Menu text="Help">
                <MenuItem text="About" onAction="#onAbout"/>
            </Menu>
        </MenuBar>
    </top>
    <center>
        <TextArea fx:id="areaText" prefHeight="310.0" prefWidth="600.0" BorderPane.alignment="CENTER"/>
    </center>
</BorderPane>
